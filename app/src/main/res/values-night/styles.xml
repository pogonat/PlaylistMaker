<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MainBackground">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="MainTitle">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MainButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="SettingsBackground">
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="ArrowBack">
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="SecondaryTitle">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="SettingsMenuLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/menu_paddingStart</item>
        <item name="android:paddingTop">@dimen/menu_paddingVertical</item>
        <item name="android:paddingBottom">@dimen/menu_paddingVertical</item>
    </style>

    <style name="SettingsMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_menu</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="SettingsMenuIcons">
        <item name="android:layout_gravity">end</item>
        <item name="tint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="SearchBox">
        <item name="android:radius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:background">@drawable/rounded_border</item>
        <item name="fontWeight">400</item>
        <item name="tint">@color/yp_black</item>
    </style>


</resources>