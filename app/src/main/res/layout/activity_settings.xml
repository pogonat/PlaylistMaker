<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical"
    android:background="@color/settings_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="20dp"
            android:src="@drawable/arrow_back_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/font_size"
            android:text="@string/settings"
            android:textColor="@color/button_name"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingStart="@dimen/menu_paddingStart"
        android:paddingTop="@dimen/menu_paddingVertical"
        android:paddingBottom="@dimen/menu_paddingVertical"
        android:paddingEnd="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/dark_theme"
            android:textSize="@dimen/text_size_menu"
            android:textColor="@color/settings_text"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/menu_paddingStart"
        android:paddingTop="@dimen/menu_paddingVertical"
        android:paddingBottom="@dimen/menu_paddingVertical"
        android:paddingEnd="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/share"
            android:textSize="@dimen/text_size_menu"
            android:textColor="@color/settings_text"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_gravity="end"
            android:src="@drawable/share_icon"
            app:tint="@color/settings_icons" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/menu_paddingStart"
        android:paddingTop="@dimen/menu_paddingVertical"
        android:paddingBottom="@dimen/menu_paddingVertical"
        android:paddingEnd="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/support"
            android:textSize="@dimen/text_size_menu"
            android:textColor="@color/settings_text"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:src="@drawable/support_light_mode"
            app:tint="@color/settings_icons"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/menu_paddingStart"
        android:paddingTop="@dimen/menu_paddingVertical"
        android:paddingBottom="@dimen/menu_paddingVertical"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/agreement"
            android:textSize="@dimen/text_size_menu"
            android:textColor="@color/settings_text"/>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_gravity="end"
            android:src="@drawable/arrow_forward_icon"
            app:tint="@color/settings_icons"/>

    </FrameLayout>

</LinearLayout>