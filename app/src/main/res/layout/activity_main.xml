<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MainBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <TextView
        style="@style/MainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/title_marginHorizontal"
        android:layout_marginTop="@dimen/title_marginTop"
        android:layout_marginBottom="@dimen/title_marginBottom"
        android:text="@string/app_name" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="@dimen/button_padding_vertical"
        android:paddingStart="@dimen/button_paddingStart"
        android:paddingEnd="@dimen/button_paddingEnd">

        <Button
            android:id="@+id/search_button"
            style="@style/MainButtons"
            android:text="@string/search_button"
            app:icon="@drawable/search_icon" />

        <Button
            android:id="@+id/media_button"
            style="@style/MainButtons"
            android:text="@string/media_button"
            app:icon="@drawable/media_icon" />

        <Button
            android:id="@+id/settings_button"
            style="@style/MainButtons"
            android:text="@string/settings"
            app:icon="@drawable/settings_icon" />

    </LinearLayout>

</LinearLayout>