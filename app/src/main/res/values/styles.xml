<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsBackground">
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="MediaBackground">
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="AgreementBackground">
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="ArrowBack">
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="SecondaryTitle">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="SettingsMenuLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/menu_paddingStart</item>
        <item name="android:paddingTop">@dimen/menu_paddingVertical</item>
        <item name="android:paddingBottom">@dimen/menu_paddingVertical</item>
    </style>

    <style name="SettingsMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_menu</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="SettingsMenuIcons">
        <item name="android:layout_gravity">end</item>
        <item name="tint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="SearchBackground">
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="SearchBox">
        <item name="android:radius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:background">@drawable/rounded_border</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="RenewButton">
        <item name="backgroundTint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CreateButton">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SearchTrackNameText">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="SearchItemSecondLineText">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="SearchItemIcon">
        <item name="tint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TrackNamePlayer">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="ArtistNamePlayer">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="PlayerTrackText">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>

    <style name="PlayerTrackValues">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="CustomTabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabIndicatorColor">?attr/colorOnSecondary</item>
        <item name="tabSelectedTextColor">?attr/colorOnSecondary</item>
        <item name="tabTextColor">?attr/colorOnSecondary</item>
    </style>

    <style name="CustomTabTextAppearance">
        <item name="android:textSize">@dimen/tab_layout_font_size</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="PlaylistTitle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="fontWeight">700</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="PlaylistContentsText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>
    
    <style name="TextInputOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/yp_blue</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="boxStrokeColor">@color/selector_box_stroke_color_initial</item>
    </style>

</resources>